<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cont_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <ImageView
            android:id="@+id/image_profile_chat"
            android:layout_width="52dp"
            android:layout_height="52dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/cont_image"
        android:layout_alignTop="@id/cont_image"
        android:layout_alignBottom="@id/cont_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_nick_direct"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nick"
            android:textColor="#262626" />
        <TextView
            android:id="@+id/txt_action_direct"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Action"
            android:textColor="#40000000" />
    </LinearLayout>
    <ImageView
        android:padding="10dp"
        android:id="@+id/photo_direct"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@id/cont_image"
        android:layout_alignBottom="@id/cont_image"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>