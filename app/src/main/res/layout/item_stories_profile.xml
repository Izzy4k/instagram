<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/cont_stories_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image_stories_new_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_oval"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_stories_new_add_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_story" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_new_stories_add_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_stories_new_profile"
            android:layout_alignStart="@id/image_stories_new_profile"
            android:layout_alignEnd="@id/image_stories_new_profile"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="New"
            android:textColor="#262626"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cont_stories_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp">

        <RelativeLayout
            android:id="@+id/image_stories_profile_cont_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_ellipse_1"
            android:padding="4dp"

           >

            <ImageView
                android:id="@+id/image_stories_profile"
                android:layout_width="52dp"
                android:layout_height="52dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_stories_profile_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_stories_profile_cont_two"
            android:layout_alignStart="@id/image_stories_profile_cont_two"
            android:layout_alignEnd="@id/image_stories_profile_cont_two"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Nick"
            android:textColor="#262626"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>
</LinearLayout>